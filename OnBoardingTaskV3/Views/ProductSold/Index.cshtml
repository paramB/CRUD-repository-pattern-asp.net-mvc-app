@model OnBoardingTaskV3.Models.ProductSold

@{
    ViewBag.Title = "Index";
}

<h2></h2>
<p>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" data-bind="click: $root.ResetModal">Add Sale</button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Product Name</th>
            <th>Store Name</th>
            <th>Date Of Sale</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: ProductSolds">
        <tr>
            <td data-bind="text: CustomerName"></td>
            <td data-bind="text: ProductName"></td>
            <td data-bind="text: StoreName"></td>
            <td data-bind="text: DateSold"></td>
            <td>
                <button class="btn btn-success" data-bind="click: $parent.ShowEditModal"> Edit </button>
                <button class="btn btn-danger" data-bind="click: $parent.DeleteSale"> Delete </button>
            </td>
        </tr>

    </tbody>
</table>

<div class="modal fade" id="myModal" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog">
    <div class="modal-dialog" data-bind="with : ProductSoldData">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="modalTitle"></h4>
            </div>
            <div class="modal-body">
                <form>
                    
                    <div class="form-group">
                        <label>Select Customer</label>
                        <select class="form-control" data-bind="options : $parent.AvailableCustomers, optionsText : 'Name', value : $parent.SelectedCustomer"></select>
                    </div>
                    <div class="form-group">
                        <label>Select Product</label>
                        <select class="form-control" data-bind="options : $parent.AvailableProducts, optionsText : 'Name', value : $parent.SelectedProduct"></select>
                    </div>
                    <div class="form-group">
                        <label>Select Store</label>
                        <select class="form-control" data-bind="options : $parent.AvailableStores, optionsText : 'Name', value : $parent.SelectedStore"></select>
                    </div>
                    <div class="form-group">
                        <label>Date of Sale</label>
                        <input type="date" class="form-control" id="saledate" data-bind="value: DateSold" />
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="createBtn" data-dismiss="modal" data-bind="click: $parent.AddSale">Create</button>
                        <button type="button" class="btn btn-success" id="updateBtn" data-dismiss="modal" data-bind="click: $parent.UpdateSale">Update</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.validation.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/KoSales.js"></script>
}





